.fb-icon-checkboxes:before { content: '\e800'; } /* '' */
.fb-icon-check-empty:before { content: '\e813'; } /* '' */
.fb-icon-circle-empty:before { content: '\e814'; } /* '' */
.fb-icon-grid:before { content: '\e816'; } /* '' */
.fb-icon-graph:before { content: '\e812'; } /* '' */
